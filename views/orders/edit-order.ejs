<!-- views/orders/edit-order.ejs -->
<h1>Editar Orden</h1>
<form method="POST" action="/orders/<%= order.id %>/edit">
  <div>
    <label for="userId">Usuario</label>
    <select id="userId" name="userId">
      <% users.forEach(user => { %>
        <option value="<%= user.id %>" <% if (user.id === order.userId) { %>selected<% } %>><%= user.name %></option>
      <% }); %>
    </select>
  </div>
  <div>
    <label for="productId">Producto</label>
    <select id="productId" name="productId">
      <% products.forEach(product => { %>
        <option value="<%= product.id %>" <% if (product.id === order.products[0].id) { %>selected<% } %>><%= product.name %></option>
      <% }); %>
    </select>
  </div>
  <div>
    <label for="cantidad">Cantidad</label>
    <input type="number" id="cantidad" name="cantidad" value="<%= order.cantidad %>" required>
  </div>
  <div>
    <label for="direccion_envio">Dirección de Envío</label>
    <input type="text" id="direccion_envio" name="direccion_envio" value="<%= order.direccion_envio %>" required>
  </div>
  <div>
    <button type="submit">Guardar</button>
    <a href="/orders/<%= order.id %>/delete" class="btn btn-danger">Eliminar</a>
  </div>
</form>
